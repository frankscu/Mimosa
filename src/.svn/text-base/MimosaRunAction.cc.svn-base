//....oooOO0OOooo........oooOO0OOooo........oooOO0OOooo........oooOO0OOooo......

void MimosaRunAction::BeginOfRunAction(const G4Run* run)
{ 
  G4cout << "### Run " << run->GetRunID() << " start." << G4endl;

  //inform the runManager to save random number seed
  //G4RunManager::GetRunManager()->SetRandomNumberStore(true);
  
  // Book histograms, ntuple
  //
  
  // Create analysis manager
  // The choice of analysis technology is done via selectin of a namespace
  // in MimosaAnalysis.hh
  G4AnalysisManager* analysisManager = G4AnalysisManager::Instance();
  
  // Open an output file
  //
  G4String fileName = "Mimosa";
  analysisManager->OpenFile(fileName);
//  analysisManager->SetFirstHistoId(1);

  // Creating histograms
  //
//  analysisManager->CreateH1("1","Edep of Hit", 1e6, 0., 1*MeV);
//  analysisManager->CreateH1("2","Edep of Truth", 1e6, 0., 1*MeV);
 
  // Creating ntuple
  //
  analysisManager->CreateNtuple("Hit", "Information of Hit");
  analysisManager->CreateNtupleIColumn("digiTrackID");
  analysisManager->CreateNtupleIColumn("digiLayerID");
  analysisManager->CreateNtupleIColumn("digiLadderID");
  analysisManager->CreateNtupleIColumn("digiChipID");
  analysisManager->CreateNtupleIColumn("digiRowID");
  analysisManager->CreateNtupleIColumn("digiColID");
  analysisManager->CreateNtupleDColumn("digiEdep");
  analysisManager->CreateNtupleDColumn("digiGlobalT");
  analysisManager->CreateNtupleIColumn("hitTrackID");
  analysisManager->CreateNtupleIColumn("hitLayerID");
  analysisManager->CreateNtupleIColumn("hitLadderID");
  analysisManager->CreateNtupleIColumn("hitChipID");
  analysisManager->CreateNtupleIColumn("hitRowID");
  analysisManager->CreateNtupleIColumn("hitColID");
  analysisManager->CreateNtupleDColumn("hitEdep");
  analysisManager->CreateNtupleDColumn("hitGlobalT");
  analysisManager->CreateNtupleIColumn("truthTrackID");
  analysisManager->CreateNtupleIColumn("truthLayerID");
  analysisManager->CreateNtupleIColumn("truthLadderID");
  analysisManager->CreateNtupleIColumn("truthChipID");
  analysisManager->CreateNtupleIColumn("truthRowID");
  analysisManager->CreateNtupleIColumn("truthColID");
  analysisManager->CreateNtupleDColumn("truthEdep");
  analysisManager->CreateNtupleDColumn("truthGlobalT");
  analysisManager->CreateNtupleIColumn("truthPDGCode");
  analysisManager->CreateNtupleIColumn("clusterSize");
  analysisManager->CreateNtupleIColumn("truthCS");
  analysisManager->CreateNtupleIColumn("eventID");
  analysisManager->FinishNtuple();
}

